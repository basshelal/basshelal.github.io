{
  "compilerOptions": {
    "strict": true,
    "module": "ES6",
    "target": "ES6",
    "lib": [
      "ES6",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleResolution": "Node",
    "rootDir": "./src/",
    "outDir": "./js/",
    "sourceMap": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ]
}